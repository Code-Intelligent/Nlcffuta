            </div>
        </nav>

        <div class="container">
         <div class="">
            
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Add a new Blog
            </button><br><br>
        
            <!-- Modal -->
             <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"> -->
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add a new Blog</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                     </div>
                    <div class="modal-body">

                        <form action="/admin/post-bg" method="post" enctype="multipart/form-data">

                            <div class="form-group">
                              <label for="exampleInputName">Enter Message Name</label>
                              <input type="name" name="title" class="form-control" id="exampleInputName" aria-describedby="nameHelp" placeholder="Enter Blog name" required>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputName">Enter Date</label>
                                <input type="date" name="date" class="form-control" id="exampleInputDate" aria-describedby="dateHelp" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Category</label>
                                <select class="form-control" type="text" name="category" id="exampleFormControlSelect1" required>
                                  <option></option>
                                  <option>Faith</option>
                                  <option>Prayer</option>
                                  <option>Spiritual growth</option>
                                  <option>Relationship</option>
                                  <option>Motivation</option>
                                  <option>Finacial growth</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Description</label>
                                <textarea class="form-control" type="text" name="excerpt" id="exampleFormControlTextarea1" rows="3" required></textarea>
                            </div>

                            <textarea name="editor1"></textarea>
                            <script>
                                    CKEDITOR.replace( 'editor1' );
                            </script>

                            <div class="form-group">
                                <label for="exampleFormControlFile1">Upload the Image file (png,jpg & jpeg)</label>
                                <input type="file" multiple accept="image/*" name="imgUrl" class="form-control-file" id="exampleFormControlFile1" required>
                            </div>

                            <button type="submit" class="btn btn-primary" >Submit</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
            </div>

        </div>

        
        <div class="row " >
            <% for (var i = 0; i < blog.length; i++  ){ %>
                <div class="col-sm-4 justify-content-center d-flex">
                    <div class="">
                      
                        <img src="<%= blog[i].imgUrl %>" height="150px" class="msg-img">
            
                        <div class="box-cont shadow p-3 mb-5 bg-white rounded">
                          <i class="fa fa-calendar blog-icons" aria-hidden="true">
                            <span class="day"><%= blog[i].date.toString().slice(0,4) %></span>
                            <span class="day"><%= blog[i].date.toString().slice(8,10) %></span>
                            <span class="mos"><%= blog[i].date.toString().slice(4,7) %></span>
                            <span class="yrs"><%= blog[i].date.toString().slice(11,15) %></span>
                          </i><br><br>
                          <h5 class="blog-title"><%= blog[i].title  %></h5>
                          <p class="blog-text" style="color: #768495;"><%= blog[i].excerpt %></p>
                          
                          <button  data-toggle="modal" data-target="#popup<%= i + blog.length %>" class="btn btn-danger float-right" style="font-size:14px;padding:5px 25px">Delete</button>
                        </div>
                      
                    </div>
                  </div>

                
                <div class="modal fade" id="popup<%= i+ blog.length  %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitles" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content" style="padding:5%">
                        <h4 style="font-weight:bold; text-align:center">Do you want to Delete this post ?</h4><br>
                       <center> 
                            <form action="/admin/blogDelete/<%= blog[i].id %>" method="post">
                                  <input type="hidden">
                                  <button type="button" style="padding:10px 30px;" class="btn btn-secondary" data-dismiss="modal">No</button>
                                  <button class="btn btn-danger"  style="padding:10px 30px;" type="submit">Yes</button>  
                            </form>
                      </center>
                      </div>
                    </div>
                </div>

            <% } %>
        </div>

        <!-- Edit blog -->
        <!-- Button trigger modal -->
        <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Launch demo modal
        </button> -->
        

    </div>
</div>




